<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rvPopActvtylyt_id"
        android:layout_width="330dp"
        android:layout_height="330dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:scaleType="centerCrop"
                android:id="@+id/rvpopActvtyImg_id"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:drawableLeft="@drawable/ic_location_on_black_24dp"
                android:textColor="#ffffff"
                android:id="@+id/rvpopActvtyPlc_id"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="15dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="Gardens by the Bay Ticket Singapore"
                android:textColor="#000000"
                android:layout_below="@+id/rvpopActvtyImg_id"
                android:id="@+id/rvpopActvtyNme_id" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rvpopActvtyNme_id"
                android:id="@+id/rvpopActvtyLnrlyt_id"
                android:paddingLeft="15dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#E78E0C"
                    android:textSize="10dp"
                    android:id="@+id/rvpopActvtyStr_id" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:textColor="#747272"
                    android:id="@+id/rvpopActvtyRvw_id"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|"
                    android:id="@+id/txtDash_id"
                    android:textColor="#C0BEBE" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#747272"
                    android:textSize="10dp"
                    android:id="@+id/rvpopActvtyBkd_id"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingLeft="15dp"
                android:textColor="#747272"
                android:id="@+id/rvpopActvtyOldPr_id"
                android:layout_marginBottom="27dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:id="@+id/rvpopActvtyprc_id"
                    android:paddingLeft="15dp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#797676"
                    android:paddingRight="15dp"
                    android:id="@+id/rvpopActvtyAvl_id" />
            </LinearLayout>
        </RelativeLayout>

</android.support.v7.widget.CardView>